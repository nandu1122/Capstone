@{
    @using TwoFactorAuth.Models;
    @model Order;
}


<div class="row orderForm ">


    <form asp-action="CheckOut" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="LastName" class="col-md-8 control-label"></label>
            <div class="col-md-8">
                <input asp-for="LastName" class="form-control" width="20" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-8 control-label"></label>
            <div class="col-md-8">
                <input asp-for="FirstName" class="form-control" width="20" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>












        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-8 control-label"></label>
            <div class="col-md-8">
                <input asp-for="PhoneNumber" class="form-control" size="10" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <input class="btn btn-success" type="submit" value="Complete order" />
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>

    </form>
</div>
