@{
    @using TwoFactorAuth.Models
    @model CellPhone
}
<div class=" col-sm-4 col-lg-4 col-md-4, float-sm-left">
    <div class="img-thumbnail">
        <img src="/Images/@Model.Image" alt="" height="200" width="200" />
        <div class="figure-caption">
            <h4>
                <a href="">@Model.CellPhoneName</a>
            </h4>
            Price : @Model.Price
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-itemId="@Model.CellPhoneId">AddToCart</a>
            </p>
        </div>
    </div>

</div>